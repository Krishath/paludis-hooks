    </package>
    <package spec="dev-utils/cmake-2.8.9-r4:0">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/cmake-2.8.9-r4::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/cmake-2.8.9-r4">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>

    <package spec="cmake-2.8.9-r4:0::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake-2.8.9-r4:0">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake-2.8.9-r4::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}"/>
    </package>
    <package spec="cmake-2.8.9-r4">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>


    <package spec="dev-utils/cmake:0::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/cmake:0">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/cmake::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/cmake">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>

    <package spec="cmake:0::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake:0">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake::zaufi-overlay">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="cmake">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>

    <package spec="dev-utils/*">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="dev-utils/*">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>

    <package spec="*/*">
        <symlink cd="/usr/share/doc" src="${PF}" dst="${PN}" />
    </package>
    <package spec="*/*">
        <rm cd="/usr/share/doc/${PF}" dst="README" />
    </package>

    <package spec="*/*" descr="man-pages-cleaner">
        <rm cd="/usr/share/man/" dst="man{0p,1,1p,2,3,3p,4,5,6,7,8}" reverse="true" />
    </package>

    <package spec="*/*" descr="docs-cleaner">
        <rm cd="/usr/share/doc/${PF}">
            <item dst="README" />
            <item dst="TODO" />
            <item dst="LICENSE" />
        </rm>
    </package>

</commands>

